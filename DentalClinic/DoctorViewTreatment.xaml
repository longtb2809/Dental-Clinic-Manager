<Window x:Class="DentalClinic.DoctorViewTreatmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hồ sơ điều trị của tôi"
        Height="600"
        Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#F9F9F9">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Tiêu đề -->
        <TextBlock Text="🩺 Hồ sơ điều trị của bác sĩ"
                   FontSize="22"
                   FontWeight="Bold"
                   Foreground="#2C3E50"
                   HorizontalAlignment="Center"
                   Margin="0 0 0 10"/>

        <!-- DataGrid -->
        <DataGrid x:Name="dgDoctorTreatments"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  AlternatingRowBackground="#EFEFEF"
                  RowHeight="35"
                  FontSize="14"
                  HeadersVisibility="Column"
                  GridLinesVisibility="Horizontal"
                  Margin="0 0 0 10">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Mã"
                                    Binding="{Binding TreatmentId}"
                                    Width="60"/>
                <DataGridTextColumn Header="Bệnh nhân"
                                    Binding="{Binding PatientName}"
                                    Width="*"/>
                <DataGridTextColumn Header="Ngày bắt đầu"
                                    Binding="{Binding StartDate}"
                                    Width="150"/>
                <DataGridTextColumn Header="Ngày hoàn thành"
                                    Binding="{Binding EndDate}"
                                    Width="150"/>
                <DataGridTextColumn Header="Chẩn đoán"
                                    Binding="{Binding Note}"
                                    Width="200"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Nút chức năng -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0 10 0 0">
            
            <Button x:Name="btnExit"
                    Content="❌ Thoát"
                    Width="90"
                    Height="38"
                    FontWeight="Bold"
                    Background="#E74C3C"
                    Foreground="White"
                    BorderBrush="#C0392B"
                    Cursor="Hand"
                    Click="btnExit_Click"/>
        </StackPanel>

    </Grid>
</Window>
